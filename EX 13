#include <stdio.h>
#include <string.h>
#define ALPHABET "ABCDEFGHIJKLMNOPQRSTUVWXYZ"
#define CIPHER "QWERTYUIOPLKJHGFDSAZXCVBNM"
void encryptMonoalphabetic(char text[]) {
    for (int i = 0; text[i] != '\0'; i++) {
        if (text[i] >= 'A' && text[i] <= 'Z')
            text[i] = CIPHER[text[i] - 'A'];
        else if (text[i] >= 'a' && text[i] <= 'z')
            text[i] = CIPHER[text[i] - 'a'] + 32;
    }
}
int main() {
    char text[100];
    printf("Enter text: ");
    gets(text);
encryptMonoalphabetic(text);
    printf("Encrypted text: %s\n", text);
    return 0;
}
